<div class="header">
	<div>{{>logo}}</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</div>

{{#with main}}
<main class="main">
	<img src="{{image}}" alt="Main image " class="main_image">

	<div class="main_content">
		<b class="main_heading">{{heading}}</b>
		<p class="main_text">{{descriotion}}</p>
		<a href="{{href}}" class="button main_button">{{button}}</a>
	</div>
</main>
{{/with}}

<div class="featured">
	{{#each featured}}
		{{>cardFeatured data=this}}
	{{/each}}
</div>

<div class="actions">
	{{#each actions}}
	<div class="actions_content">
		<h3 class="actions_heading">{{heading}}</h3>
		<a href="{{url}}" class="button actions_button">{{text}}</a>
	</div>
	{{/each}}
</div>

<footer class="page_block">
	<div class="footer">
		<div>
			{{>logo}}
			<span class="footer_copyright">Copyright 2023-2024</span>
		</div>

		{{#each footer}}
		<div>
			<span class="footer_title">{{title}}</span>
			{{>nav list=links isVertikal=true}}
		</div>
		{{/each}}
	</div>
</footer>